{
  "name": "AnJsflScript-ts",
  "private": true,
  "version": "0.0.0",
  "description": "是一个专为 Adobe Animate 设计的 JavaScript For Flash (JSFL)脚本集合，旨在通过自动化任务提升工作效率，帮助用户更高效地完成重复性工作，从而专注于创意与设计。",
  "author": "穹的兔兔",
  "license": "LGPL-3.0-or-later",
  "keywords": [
    "Adobe Animate",
    "JavaScript For Flash",
    "JSFL",
    "scripts",
    "automation",
    "Efficiency",
    "Improvement",
    "Creativity",
    "Design"
  ],
  "//": "子模块，提供给ts使用，名字在子模块下的package.json name字段中",
  "//": "运行npm intall 即可把子模块安装到node modules中",
  "workspaces": [
    "packages/*",
    "tools/project/*"
  ],
  "references": [
    {
      "path": "packages/validation"
    },
    {
      "path": "packages/sat-js"
    }
  ],
  "scripts": {
    "//": "format",
    "format": "prettier --write **/*.ts --config config/codestyle/.prettierrc --ignore-path config/codestyle/.prettierignore",
    "//": "生成模块，包括require,tsconfig文件的修改",
    "generate_config": "tsx ./tools/project/src/require/generate_config.ts",
    "//": "build脚本",
    "build:require": "tsc && tsx ./tools/project/src/typescript/require.ts",
    "build:define": "tsc && tsx ./tools/project/src/typescript/define.ts",
    "build": "npm run build:require && npm run build:define",
    "//": "重新build",
    "clearAll": "tsx ./tools/project/clean/CleanAll.ts",
    "ReBuild": "npm run clearAll && npm run build",
    "//": "添加文件头",
    "addHeaders": "tsx ./tools/project/src/headers/addFileHeader.ts"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/lodash": "4.17.23",
    "@types/loglevel": "1.6.3",
    "@types/node": "25.0.7",
    "@types/path-browserify": "1.0.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.3",
    "jest": "30.2.0",
    "minimatch": "10.1.1",
    "prettier": "3.5.2",
    "strip-json-comments": "3.1.0",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rabit2022/AnJsflScript-ts"
  },
  "readmeFilename": "README.md"
}
