{
  "compilerOptions": {
    "target": "es5",
    "module": "AMD",
    "useDefineForClassFields": true,
    "lib": ["es6","dom"],

    /* Bundler mode */
//    "moduleResolution": "bundler",
//    "allowImportingTsExtensions": true,
//    "resolveJsonModule": true,
//    "isolatedModules": true,
//    "noEmit": true,  // 不生成js文件


    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "skipLibCheck": true, // 启用跳过类型定义文件的检查
    "allowJs": true,
    "incremental": true,// 增量编译,只重新编译那些被修改的文件及其依赖项


    "esModuleInterop": false,      // 避免注入 __importDefault
    "importHelpers": false,
    "noEmitHelpers": true,         // 不生成 tslib 辅助函数（旧环境不支持）


    /* 生成相同的目录结构 */
//    "rootDir": "./src",
    "outDir": "./dist",   // ← 输出目录

    /* 路径映射 */
    "baseUrl": ".", // 设置 baseUrl 为项目根目录
    "paths":
    // region REQUIRE MODULES PATHS
    {
      "console": ["third/_custom/xjsfl/console.jsfl"],
      "JSFLConstants": ["third/_custom/xjsfl/JSFLConstants.jsfl"],
      "JSFLInterface": ["third/_custom/xjsfl/JSFLInterface.jsfl"],
      "linqUtil": ["third/_custom/utils/linqUtil.jsfl"],
      "satUtil": ["third/_custom/utils/satUtil.jsfl"],
      "SAT": ["third/_custom/sat-js/SAT.jsfl"],
      "Context": ["third/_custom/Context/Context.jsfl"],
      "_exports": ["third/_bridge/exports/_exports.jsfl"],
      "document-cookie": ["third/_bridge/document-cookie/document-cookie.jsfl"],
      "store-js": ["third/utils/store-js/store-js.jsfl"],
      "progress": ["third/utils/progress/progress.jsfl"],
      "lodash": ["third/utils/lodash/lodash.jsfl"],
      "linq": ["third/utils/linq/linq.jsfl"],
      "text": ["third/require/text/text.jsfl"],
      "require-js": ["third/require/requirejs/require-js.jsfl"],
      "typedarray": ["third/polyfill/typedarray/typedarray.jsfl"],
      "symbol-es6": ["third/polyfill/symbol-es6/symbol-es6.jsfl"],
      "es2017": ["third/polyfill/js-polyfills/es2017.jsfl"],
      "es7-shim": ["third/polyfill/es7-shim/es7-shim.jsfl"],
      "es6-sham": ["third/polyfill/es6-shim/es6-sham.jsfl"],
      "es6-shim": ["third/polyfill/es6-shim/es6-shim.jsfl"],
      "es5-sham": ["third/polyfill/es5-shim/es5-sham.jsfl"],
      "es5-shim": ["third/polyfill/es5-shim/es5-shim.jsfl"],
      "path-browserify": ["third/nodejs/path-browserify/path-browserify.jsfl"],
      "assert": ["third/nodejs/assert/assert.jsfl"],
      "loglevel": ["third/log/loglevel/loglevel.jsfl"],
      "universal-cookie": ["third/cookie/universal-cookie/universal-cookie.jsfl"],
      "checkUtil": ["src/lib/core/checkUtil"],
      "Tips": ["src/lib/core/Tips"],
      "CheckDocument": ["src/lib/core/flash/check/CheckDocument"],
      "CheckInSymbol": ["src/lib/core/flash/check/CheckInSymbol"],
      "CheckSelectedItems": ["src/lib/core/flash/check/CheckSelectedItems"],
      "CheckSelectedLayers": ["src/lib/core/flash/check/CheckSelectedLayers"],
      "conditionTypes": ["src/lib/core/flash/check/conditionTypes"],
      "CheckSelectionRules": ["src/lib/core/flash/check/rules/CheckSelectionRules"],
      "ruleTypes": ["src/lib/core/flash/check/rules/ruleTypes"],
      "ruleUtils": ["src/lib/core/flash/check/rules/ruleUtils"],
      "CheckVariableRedeclaration": ["src/lib/core/base/check/CheckVariableRedeclaration"],
      "CheckSelection": ["src/lib/core/base/check/selections/CheckSelection"],
      "selectionTypes": ["src/lib/core/base/check/selections/selectionTypes"],
      "selectionUtils": ["src/lib/core/base/check/selections/selectionUtils"]
    }
    
// endregion REQUIRE MODULES PATHS
  },
  "include": [
    "src",

    // 全局的 类型定义文件
    "./types/jsfl-typescript/jsfl.d.ts",
    "types/myShim/global.d.ts"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ]
}
