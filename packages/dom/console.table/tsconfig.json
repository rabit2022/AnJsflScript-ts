{
  "compilerOptions": {
    "module": "AMD",

    // node import
    "moduleResolution": "node",
    // es import
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noEmitOnError": false,
    "removeComments": true,

    // 允许 TypeScript 将项目作为依赖进行增量编译
    "composite": true,
    "declaration": true,

    "rootDir": "src",
    "outDir": "./dist",
    "types": ["node"],
    "target": "es5",
    "lib": [
      "es5",
      "es6"
    ]
  },
  "include": [
    "src",

    // region TYPES
    // jsfl
    "../../../types/jsfl/types/**/*.d.ts",
    // 全局的 类型定义文件
    "../../../types/myShim/*.d.ts"
// endregion TYPES
  ]
}