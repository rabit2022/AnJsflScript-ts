{
  "compilerOptions": {
    "module": "AMD",

    "strict": true,
    "noEmitOnError": false,
    "removeComments": true,

    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "./dist",
    "types": ["node"],
    "target": "es5",
    "lib": [
      "es5",
      "es6"
    ]
  },
  "include": [
    "src",

    // jsfl
    "../../../types/jsfl/types/**/*.d.ts",
    // 全局的 类型定义文件
    "../../../types/myShim/*.d.ts"
  ]
}