{
  "compilerOptions": {
    "module": "AMD",

    "noImplicitAny": false, // ❌ 强烈不建议！整个项目失去隐式 any 保护

    "strict": true,
    "noEmitOnError": false,
    "removeComments": true,
    //    "outFile": "./dist/Events.js", // JSFL 通常是一个文件，所以用 outFile 合并


    "rootDir": "src",
    "outDir": "./dist",
    "types": [
      "jest"
    ],
    "target": "es5",
    "lib": [
      "es5",
      "es6"
    ]
  },
  "include": [
    "src",

    // jsfl
    "../../../types/jsfl/types/**/*.d.ts",
    // 全局的 类型定义文件
    "../../../types/myShim/*.d.ts"
  ]
}