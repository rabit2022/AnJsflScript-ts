{
  "compilerOptions": {
    "module": "AMD",
    "strict": true,
    "noEmitOnError": false,
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    // ❌ 强烈不建议！整个项目失去隐式 any 保护

    "rootDir": "src",
    "outDir": "./dist",
    "types": [],
    "target": "es5",
    "lib": [
      "es5",
      "es6"
    ]
  },
  "include": [
    "src",
    // jsfl
    "../../../types/jsfl/types/**/*.d.ts",
    // 全局的 类型定义文件
    "../../../types/myShim/*.d.ts"
  ]
}